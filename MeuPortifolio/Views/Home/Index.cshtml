@{
    ViewData["Title"] = "Meu Portfolio";
}

<link rel="stylesheet" href="/css/portifolio.css">

<div class="container">
    <!-- Hero Section -->
    <section class="hero">
        <h1>Olá, eu sou @ViewData["Nome"]</h1>
        <p class="subtitle">@ViewData["Titulo"]</p>
        <a href="#projetos" class="btn">Ver Meus Projetos</a>
    </section>

    <!-- Seção Habilidades -->
    <section id="habilidades" class="section">
        <h2>Minhas Habilidades</h2>
        <div class="habilidades-grid">
            @foreach (var habilidade in (List<string>)ViewData["Habilidades"])
            {
                <div class="habilidade-card">
                    <span class="habilidade-icon">✓</span>
                    <span class="habilidade-texto">@habilidade</span>
                </div>
            }
        </div>
    </section>

    <!-- Seção Projetos -->
    <section id="projetos" class="section">
        <h2>Meus Projetos</h2>
        <div class="projetos-grid">
            @foreach (var projeto in (List<MeuPortifolio.Controllers.Projeto>)ViewData["Projetos"])
            {
                <div class="projeto-card">
                    <h3>@projeto.Titulo</h3>
                    <p class="projeto-descricao">@projeto.Descricao</p>
                    <div class="projeto-tecnologias">
                        <strong>Tecnologias:</strong> @projeto.Tecnologias
                    </div>
                    <a href="@projeto.Link" class="btn-projeto">Ver Detalhes</a>
                </div>
            }
        </div>
    </section>

    <!-- Seção Contato -->
    <section id="contato" class="section">
        <h2>Entre em Contato</h2>
        <p>Interessado em trabalhar juntos? Vamos conversar!</p>
        <h3>Informações Pessoais</h3>
        <h5>Telefone: @ViewData["Telefone"]</h5>
        <h5>
            E-mail:
            <a href="mailto:@ViewData["Email"]">
                @ViewData["Email"]
            </a>
        </h5>
        <h5>
            GitHub:
            <a href="@ViewData["GitHub"]" target="_blank" rel="noopener noreferrer">
                @ViewData["GitHub"]
            </a>
        </h5>
        <h5>
            Linkedin:
            <a href="@ViewData["Linkedin"]" target="_blank" rel="noopener noreferrer">
                @ViewData["Linkedin"]
            </a>
        </h5>

    </section>
</div>

